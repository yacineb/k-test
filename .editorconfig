root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

# Javascript
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 120
quote_type = single

[*.json]
indent_style = space
indent_size = 2